<?xml version="1.0"?>
<template
    format="5"
    revision="6"
    name="MVP Helper"
    minApi="9"
    minBuildApi="14"
    description="Creates a set of view and presenter">

    <category value="Other" />
    <formfactor value="Mobile" />

    <parameter
        id="name"
        name="Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Main"
        help="The name of the view and presenter class to create" />

    <parameter
        id="generateLayout"
        name="Has RecyclerView Adapter and Viewholder"
        type="boolean"
        default="false"
        help="If true, adapter and viewholder file will be generated" />

    <parameter
        id="features"
        name="View Parent Kind"
        type="enum"
        default="activity"
        help="Which is the view container ?" >
        <option id="activity">Activity</option>
        <option id="fragment">Fragment</option>
    </parameter>

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />
        
    <parameter
        id="rootName"
        name="Root name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity_pager.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
